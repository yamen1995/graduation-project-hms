<odoo>
  <template id="report_custom_external_layout" inherit_id="web.external_layout_standard">

    <!-- Professional HEADER -->
    <xpath expr="//div[contains(@t-attf-class, 'header')]" position="replace">
      <div class="header border-bottom pb-2">
        <div class="d-flex justify-content-between align-items-center">
          <!-- Logo on the left -->
          <div>
            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height:70px;"/>
          </div>

          <!-- Hospital Name + Tagline in the center -->
          <div class="text-center flex-grow-1">
            <h2 class="m-0" style="font-size:20px; font-weight:bold; color:#2c3e50;">
              <t t-esc="company.name or 'Script Surgeons Hospital'"/>
            </h2>
            <p class="m-0" style="font-size:12px; color:#555;">
              Excellence in Healthcare &amp; Compassion
            </p>
          </div>

          <!-- Contact details on the right -->
          <div class="text-end" style="font-size:11px; line-height:1.4;">
            <t t-esc="company.phone or '+123 456 7890'"/><br/>
            <t t-esc="company.email or 'info@scriptsurgeons.com'"/><br/>
            <t t-esc="'Amman, Jordan'"/>
          </div>
        </div>
      </div>
    </xpath>

    <!-- Professional FOOTER -->
    <xpath expr="//div[contains(@t-attf-class, 'footer')]" position="replace">
      <div class="footer border-top pt-2 mt-3" style="font-size:11px; color:#555;">
        <div class="d-flex justify-content-between align-items-center">
          
          <!-- Left: Hospital Info -->
          <div>
            <strong><t t-esc="company.name or 'Script Surgeons Hospital'"/></strong><br/>
            <span><t t-esc="company.phone or '+123 456 7890'"/> | <t t-esc="company.email or 'info@scriptsurgeons.com'"/></span>
          </div>

          <!-- Center: Slogan -->
          <div class="text-center text-muted fst-italic">
          <h2 class="m-0" style="font-size:20px; font-weight:bold; color:#2c3e50;">
            "Your Health, Our Priority"
            </h2>
          </div>

          <!-- Right: Page numbering -->
          <div class="text-end text-muted">
            <t t-if="report_type == 'pdf'">
              Page <span class="page"/> / <span class="topage"/>
            </t>
          </div>
        </div>
      </div>
    </xpath>

  </template>
</odoo>
