<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<odoo>
  <template id="hms_override_web_login_modern" inherit_id="web.login" name="HMS: Modern Login Override">
    <xpath expr="." position="replace">
      <t t-call="web.frontend_layout">
        <t t-set="html_data" t-value="{'style': 'height: 100%;'}"/>
        <t t-set="body_classname" t-value="'o_login_background'"/>
        <t t-set="no_header" t-value="True"/>
        <t t-set="no_footer" t-value="True"/>

        <!-- Fullscreen login layout -->
        <div class="o_login_outer d-flex align-items-center justify-content-center">
          <!-- Blur overlay -->
          <div class="o_login_overlay"></div>

          <!-- Central login card -->
          <div class="o_login_inner card shadow-lg p-4">
            <!-- Logo + Title -->
            <div class="text-center pb-3 border-bottom mb-4">
              <img t-att-src="'/hms/static/src/img/logo.png'" alt="Hospital Logo"/>
              <h4 class="mt-3">Hospital Management System</h4>
            </div>

            <!-- Login form -->
            <form role="form" method="post" onsubmit="this.action = '/web/login' + location.hash" class="oe_login_form" action="/web/login">
              <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>


              <!-- Email -->
              <div class="mb-3 field-login">
                <label for="login" class="form-label d-flex justify-content-between">
                  Email
                  <button type="button" class="o_user_switch_btn btn btn-sm btn-link m-0 p-0" tabindex="1">Choose a user</button>
                </label>
                <input type="text" placeholder="Email" name="login" id="login" class="form-control" required="required" autocapitalize="off" autocomplete="username" t-att-value="request.params.get('login','')"/>
              </div>

              <!-- Password -->
              <div class="mb-3">
                <label for="password" class="form-label d-flex justify-content-between">
                  Password
                  <a class="btn btn-link btn-sm" tabindex="1" href="/web/reset_password?redirect=%2Fmy%2Fhome%3F">Reset Password</a>
                </label>
                <input type="password" placeholder="Password" name="password" id="password" class="form-control" required="required" autocomplete="current-password" maxlength="4096"/>
              </div>

              <!-- Buttons -->
              <div class="oe_login_buttons text-center gap-1 d-grid mb-1 pt-3">
                <button type="submit" class="btn btn-primary">Log in</button>
                <button type="submit" name="redirect" value="/web/become" class="btn btn-link btn-sm">Log in as superuser</button>
                <t t-call="web.login_oauth"/>
              </div>
              <input type="hidden" name="type" value="password"/>
              <input type="hidden" name="redirect" t-att-value="redirect"/>

              <!-- Sign up -->
              <p class="mt-2 text-center">
                <a class="btn btn-link btn-sm" href="/web/signup?redirect=%2Fmy%2Fhome%3F">Don't have an account?</a>
              </p>

              <!-- Patient Register -->
              <div class="o_patient_register_btn">
                <a href="/hms/patient/register" class="btn btn-primary w-100">Register as a patient</a>
              </div>
            </form>
          </div>
        </div>
      </t>
    </xpath>
  </template>
</odoo>

</odoo>