<!-- hms/views/hms_consumable_line_views.xml -->
<odoo>
    <!-- list view -->
    <record id="view_hms_consumable_line_tree" model="ir.ui.view">
        <field name="name">hms.consumable.line.tree</field>
        <field name="model">hms.consumable.line</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="product_id" context="{'default_is_consumable': True, 'search_default_filter_is_consumable': 1, 'default_is_storable' : 1, 'form_view_ref' : 'hms.view_product_template_formv_hms'}"/>
                <field name="quantity"/>
                <field name="unit_price"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_hms_consumable_line_form" model="ir.ui.view">
        <field name="name">hms.consumable.line.form</field>
        <field name="model">hms.consumable.line</field>
        <field name="arch" type="xml">
            <form string="Consumable Line">
                <sheet>
                    <group>
                        <field name="product_id" context="{'default_is_consumable': True, 'search_default_filter_is_consumable': 1, 'default_is_storable' : 1, 'form_view_ref' : 'hms.view_product_template_formv_hms'}"/>
                        <field name="quantity"/>
                        <field name="unit_price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_hms_consumable_line_tree" model="ir.ui.view">
    <field name="name">hms.consumable.line.tree</field>
    <field name="model">hms.consumable.line</field>
    <field name="arch" type="xml">
        <list editable="bottom">
            <field name="case_id"/>
            <field name="product_id" context="{'default_is_consumable': True, 'search_default_filter_is_consumable': 1, 'default_is_storable' : 1, 'form_view_ref' : 'hms.view_product_template_formv_hms'}"/>
            <field name="quantity"/>
            <field name="unit_price" readonly="1"/>
        </list>
    </field>
</record>

<record id="view_hms_consumable_line_form" model="ir.ui.view">
    <field name="name">hms.consumable.line.form</field>
    <field name="model">hms.consumable.line</field>
    <field name="arch" type="xml">
        <form string="Consumable Line">
            <group>
                <field name="case_id"/>
                <field name="product_id" context="{'default_is_consumable': True, 'search_default_filter_is_consumable': 1, 'default_is_storable' : 1, 'form_view_ref' : 'hms.view_product_template_formv_hms'}"/>
                <field name="quantity"/>
                <field name="unit_price" readonly="1"/>
            </group>
        </form>
    </field>
</record>


    <!-- Action -->
    <record id="action_hms_consumable_line" model="ir.actions.act_window">
        <field name="name">Consumable Lines</field>
        <field name="res_model">hms.consumable.line</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
