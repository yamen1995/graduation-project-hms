<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Product Form View -->
    <record id="view_product_template_form_hms_consumable" model="ir.ui.view">
        <field name="name">product.template.form.hms.consumable</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <group name="group_general" position="after">

            </group>

        </field>
    </record>

    <!-- Inherit Product Search View -->
    <record id="view_product_template_search_hms" model="ir.ui.view">
        <field name="name">product.template.search.inherit.hms</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter name="filter_is_consumable_mange" string="Consumable Mange" domain="[('is_consumable_mange', '=', True)]"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Product Tree View -->
    <record id="view_product_template_tree_hms" model="ir.ui.view">
        <field name="name">product.template.tree.inherit.hms</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="is_consumable_mange" optional="show"/>
            </field>
        </field>
    </record>

    <!-- Action for Consumable Mange (تركتها كما هي: list,form) -->
    <record id="action_product_consumable_mange" model="ir.actions.act_window">
        <field name="name">Consumable Mangement</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">list,form</field>
        <field name="context">
            {'default_is_consumable_mange': True, 'search_default_filter_is_consumable_mange': 1, 'form_view_ref': 'hms.view_product_template_form_hms_consumable'}
        </field>
        <field name="domain">[('is_consumable_mange', '=', True)]</field>
    </record>
   
   
</odoo>
