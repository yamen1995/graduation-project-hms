<odoo>
    <record id="view_hms_disease_list" model="ir.ui.view">
        <field name="name">hms.disease.list</field>
        <field name="model">hms.disease</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="is_chronic"/>
            </list>
        </field>
    </record>

    <record id="view_hms_disease_form" model="ir.ui.view">
        <field name="name">hms.disease.form</field>
        <field name="model">hms.disease</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="is_chronic"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
