<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Appointments List Page -->
        <template id="portal_my_appointments" name="My Appointments">
            <t t-call="portal.portal_layout">
                <t t-set="title" t-value="'My Appointments'"/>
                <div class="container mt-3">
                    <div class="row">
                        <div class="col-12">
                            <h2><t t-translate="true">My Appointments</t></h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th><t t-translate="true">Patient</t></th>
                                        <th><t t-translate="true">Doctor</t></th>
                                        <th><t t-translate="true">Date</t></th>
                                        <th><t t-translate="true">Status</t></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="appointments" t-as="appointment">
                                        <tr>
                                            <td>
                                                <span t-esc="appointment.patient_id.display_name"/>
                                            </td>
                                            <td>
                                                <span t-esc="appointment.doctor_id.display_name"/>
                                            </td>
                                            <td>
                                                <span t-esc="appointment.date"/>
                                            </td>
                                            <td>
                                                <span t-attf-class="badge bg-{{ {
                                                    'draft': 'secondary',
                                                    'confirmed': 'info',
                                                    'done': 'success',
                                                    'canceled': 'danger',
                                                    'in_progress': 'warning',
                                                    'no_show': 'dark'
                                                }[appointment.state] or 'secondary' }}"
                                                    t-esc="appointment.state"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>