<odoo>
    <!-- List View -->
    <record id="hms_appointment_view_list" model="ir.ui.view">
        <field name="name">hms.appointment.view.list</field>
        <field name="model">hms.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointments">
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date"/>
                <field name="expected_end"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="hms_appointment_view_form" model="ir.ui.view">
        <field name="name">hms.appointment.view.form</field>
        <field name="model">hms.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary" invisible="state != 'draft'"  options="{'reload_on_button': True}" groups="hms.group_hms_receptionist,base.group_system"/>
                    <button name="action_in_progress" string="Start" context="{'new_md': True}" type="object" class="btn-primary" invisible="state != 'confirmed'"  options="{'reload_on_button': True}" groups="hms.group_hms_receptionist,base.group_system"/>
                    <button name="action_done" string="Done" type="object" class="btn-primary" invisible="state not in ('in_progress','confirmed')"  options="{'reload_on_button': True}" groups="hms.group_hms_doctor,base.group_system"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-primary" invisible="state in ('done','canceled','no_show')"  options="{'reload_on_button': True}" groups="hms.group_hms_receptionist,hms.group_hms_doctor,base.group_system"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,done,canceled,no_show"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="patient_id" required="1"/>
                            <field name="department_id" />
                            <field name="doctor_id" required="1"/>
                            
                        </group>
                        <group>
                            <field name="date" required="1"/>
                            <field name="expected_end"/>
                            <field name="case_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="cancel_reason" invisible="state != 'canceled'"/>
                        <field name="no_show_reason" invisible="state != 'no_show'"/>
                    </group>
                </sheet>


            </form>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="hms_appointment_view_calendar" model="ir.ui.view">
        <field name="name">hms.appointment.view.calendar</field>
        <field name="model">hms.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Appointments" date_start="date" date_stop="expected_end" color="doctor_id">
                <field name="patient_id"/>
                <field name="doctor_id" filters="1" />
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Professional search view for hms.appointment -->
    <record id="hms_appointment_view_search" model="ir.ui.view">
        <field name="name">hms.appointment.view.search</field>
        <field name="model">hms.appointment</field>
        <field name="arch" type="xml">
            <search string="Appointment Search">
                <!-- Search fields for quick search -->
                <field name="patient_id" string="Patient" filter_domain="[('patient_id.name', 'ilike', self)]"/>
                <field name="doctor_id" string="Doctor" filter_domain="[('doctor_id.name', 'ilike', self)]"/>
                <field name="department_id" string="Department" filter_domain="[('department_id.name', 'ilike', self)]"/>
                <field name="case_id" string="Case" filter_domain="[('case_id.name', 'ilike', self)]"/>
                

                <separator/>
                
                <!-- State filters -->
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Cancelled" name="canceled" domain="[('state', '=', 'canceled')]"/>
                <filter string="No Show" name="no_show" domain="[('state', '=', 'no_show')]"/>
                
                <separator/>
                
                <!-- Time-based filters -->
                <filter string="Appointments Starting Soon" name="starting_soon" domain="[('date', '>=', context_today().strftime('%Y-%m-%d 00:00:00')), ('date', '&lt;=', (context_today() + datetime.timedelta(hours=2)).strftime('%Y-%m-%d %H:%M:%S'))]"/>
                
                <!-- Custom filters -->
                <filter string="Appointments Without Case" name="no_case" domain="[('case_id', '=', False)]"/>
                <filter string="Appointments With Case" name="with_case" domain="[('case_id', '!=', False)]"/>
                
                <!-- Group By section -->
                <group name="group_by">
                    <filter string="Doctor" name="group_by_doctor" context="{'group_by': 'doctor_id'}"/>
                    <filter string="Patient" name="group_by_patient" context="{'group_by': 'patient_id'}"/>
                    <filter string="Department" name="group_by_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by': 'date:day'}"/>
                    <filter string="Week" name="group_by_week" context="{'group_by': 'date:week'}"/>
                    <filter string="Month" name="group_by_month" context="{'group_by': 'date:month'}"/>
                    <filter string="Case" name="group_by_case" context="{'group_by': 'case_id'}"/>
                </group>
                
                <!-- Search Panel for faceted search -->
                <searchpanel>
                    <field name="state" string="Status" icon="fa-hourglass" select="multi" enable_counters="1"/>
                    <field name="doctor_id" string="Doctor" icon="fa-user-md" select="multi" enable_counters="1"/>
                    <field name="department_id" string="Department" icon="fa-building" select="multi" enable_counters="1"/>
                    <field name="patient_id" string="Patient" icon="fa-user" select="multi" enable_counters="1"/>
                    <field name="case_id" string="Case" icon="fa-stethoscope" select="multi" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>
</odoo>