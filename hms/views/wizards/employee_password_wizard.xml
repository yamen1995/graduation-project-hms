<odoo>
    <record id="view_change_employee_password_wizard_form" model="ir.ui.view">
        <field name="name">change.employee.password.wizard.form</field>
        <field name="model">change.employee.password.wizard</field>
        <field name="arch" type="xml">
            <form string="Change Employee Password">
                <group>
                    <field name="employee_id" readonly="1"/>
                    <field name="new_password"/>
                </group>
                <footer>
                    <button string="Change Password" type="object" name="action_change_user_password" class="btn-primary" />
                    <button string="Cancel" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_change_employee_password_wizard" model="ir.actions.act_window">
        <field name="name">Change Employee Password</field>
        <field name="res_model">change.employee.password.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>